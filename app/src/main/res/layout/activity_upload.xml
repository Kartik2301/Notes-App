<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E3B4C"
    android:padding="10dp"
    tools:context=".UploadActivity">

    <EditText
        android:layout_width="match_parent"
        android:minHeight="45dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/topic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        android:padding="10dp"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:layout_marginBottom="55dp"
        android:hint="Enter the Topic"/>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        android:layout_height="100dp">

        <EditText
            android:layout_width="match_parent"
            android:minHeight="100dp"
            android:id="@+id/desc"
            android:layout_height="match_parent"
            android:imeOptions="actionDone"
            android:inputType="text|textMultiLine"
            android:gravity="top"
            android:padding="10dp"
            android:background="@drawable/shape3"
            android:layout_marginBottom="20dp"
            android:hint="Description"/>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:background="@drawable/stles"
                android:id="@+id/pdf_add"
                android:scaleType="fitCenter"
                android:layout_alignParentStart="true"
                android:src="@drawable/up_pdf">

            </ImageButton>

            <ImageButton
                android:layout_width="150dp"
                android:layout_height="200dp"
                android:id="@+id/img_add"
                android:background="@drawable/stles"
                android:layout_alignParentEnd="true"
                android:scaleType="fitCenter"
                android:src="@drawable/up">

            </ImageButton>
        </RelativeLayout>



    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit it"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#fff"
        android:id="@+id/upload_page"
        android:textAllCaps="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="#FED30A"
        ></Button>

</androidx.constraintlayout.widget.ConstraintLayout>